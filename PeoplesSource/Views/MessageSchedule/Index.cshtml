    jQuery.fn.addRows = function (rows) { // Will not work for treegrid
        var self = this;

        var newData = [];
        var allRows = this.jqGrid('getGridParam', 'data');

        $.each(rows, function () {
            newData.push(this);
        });

        $.each(allRows, function () {
            newData.push(this);
        });

        this.jqGrid('clearGridData')
            .jqGrid('setGridParam', { data: newData })
            .trigger('reloadGrid');
    }

