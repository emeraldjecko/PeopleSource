@{
    ViewBag.Title = "Products Publisher";
}
<style type="text/css">
    .container.ng-scope {
        width: auto;
        overflow-x: auto;
        white-space: nowrap;
    }

    .remove-padding-right {
        padding-right: 0 !important;
    }

    .remove-padding {
        padding: 0 !important;
    }
</style>
<div class="container-fluid">
    <div class="panel panel-primary" style="margin-top:40px;">
        <div class="panel-heading"><h4>Products Publisher</h4></div>
        <div class="panel-body" style="margin-top:20px;">
            <div class="container" ng-controller="ProductController as vm">
                @*class="container"*@
                <form class="form-horizontal">
                    <div class="row col-md-12">
                        <div class="form-group">

                            <div class="col-md-5">
                                <div class="row">
                                    <label class="control-label col-md-3" for="sku">Real SKU</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="sku" placeholder="Enter Sku" ng-model="vm.key">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="row">
                                    <label class="control-label col-md-2" for="sku">Product Name</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="PName" placeholder="Enter Product Name" ng-model="vm.PName">
                                    </div>
                                    @*<button ng-disabled="!(vm.key ||vm.PName)" ng-click="vm.getProducts()" class="btn btn-primary col-md-4"> <i class="fa fa-cloud-download"></i> Get products </button>*@
                                    <button  ng-click="vm.getProducts()" class="btn btn-primary col-md-4"> <i class="fa fa-cloud-download"></i> Get products </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-5">
                                <div class="row">
                                    <label class="control-label col-md-3" for="sku">Base </label>
                                    <div class="col-md-3">
                                        <input type="number" step="0.01" class="form-control" id="basePrice" ng-change="vm.updatePrices(vm.basePrice)" placeholder="Base"
                                               ng-model="vm.basePrice" />
                                    </div>
                                    @*<div class="col-md-1"></div>*@
                                    <label class="control-label col-md-3" for="sku" title="Shipping Cost">Shipping Cost</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" ng-model="vm.ShippingCost" ng-change="vm.profitPrices(vm.ShippingCost)" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="row">
                                    <label class="control-label col-md-1" for="Profit1">Profit 1</label>
                                    <div class="col-md-1 remove-padding-right">
                                        <select id="ddlProfit1" class="form-control remove-padding" ng-model="vm.OperandProfit1">
                                            <option selected="selected" value="=">=</option>
                                            <option value=">">></option>
                                            <option value="<"><</option>
                                            <option value=">=">>=</option>
                                            <option value="<="><=</option>
                                            <option value="<>"><></option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" id="tbProfit1" placeholder="Enter Profit 1" ng-model="vm.ValueProfit1">
                                    </div>
                                    <label class="control-label col-md-1" for="SRP30">SRP30</label>
                                    <div class="col-md-1 remove-padding-right">
                                        <select id="ddlSRP30" class="form-control remove-padding" ng-model="vm.OperandSRP30">
                                            <option selected="selected" value="=">=</option>
                                            <option value=">">></option>
                                            <option value="<"><</option>
                                            <option value=">=">>=</option>
                                            <option value="<="><=</option>
                                            <option value="<>"><></option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" id="tbSRP30" placeholder="Enter SRP30" ng-model="vm.ValueSRP30">
                                    </div>
                                    <label class="control-label col-md-1" for="ddlTUS30">TUS30</label>
                                    <div class="col-md-1 remove-padding-right">
                                        <select id="ddlTUS30" class="form-control remove-padding" ng-model="vm.OperandTUS30">
                                            <option selected="selected" value="=">=</option>
                                            <option value=">">></option>
                                            <option value="<"><</option>
                                            <option value=">=">>=</option>
                                            <option value="<="><=</option>
                                            <option value="<>"><></option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" id="tbTUS30" placeholder="Enter TUS30" ng-model="vm.ValueTUS30">
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-md-1"></div>*@

                        </div>


                        @*<div class="row col-md-12">

                            </div>
                            <div class="row col-md-12">
                                <span class="col-md-11 col-md-offset-1">Ordered By: {{orderByField=='increment'?'Add':orderByField=='secondProfitPrice'?'Profit 2':orderByField=='firstProfitPrice'?'Profit 1':orderByField=='priceDefault'?'Price 1':orderByField=='updatedPrice'?'Price 2':orderByField }}, Reverse Sort: {{reverseSort}}</span><br><br>
                            </div>*@

                        <div class="form-group">
                            <div class="col-md-5">
                                <div class="row">


                                    <label class="control-label col-md-3" for="sku" title="Incremental">Incremental</label>
                                    <div class="col-md-3">
                                        <input type="number" step="0.01" class="form-control" id="Incremental" ng-change="vm.updateIncrementalPrices(vm.Incremental)" placeholder="Incremental"
                                               ng-model="vm.Incremental" />

                                    </div>
                                    <label class="control-label col-md-3" for="sku">Seller Id</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" id="SellerId" placeholder="Enter SellerId" ng-model="vm.SellerId" />
                                    </div>





                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="row">

                                    <label class="control-label col-md-1" for="SRRS">SRRS</label>
                                    <div class="col-md-1 remove-padding-right">
                                        <select id="ddlSRRS" class="form-control remove-padding" ng-model="vm.OperandSRRS">
                                            <option selected="selected" value="=">=</option>
                                            <option value=">">></option>
                                            <option value="<"><</option>
                                            <option value=">=">>=</option>
                                            <option value="<="><=</option>
                                            <option value="<>"><></option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" id="tbSRRS" placeholder="Enter SRRS" ng-model="vm.ValueSRRS">
                                    </div>
                                    <label class="control-label col-md-1" for="TURS">TURS</label>
                                    <div class="col-md-1 remove-padding-right">
                                        <select id="ddlTURS" class="form-control remove-padding" ng-model="vm.OperandTURS">
                                            <option selected="selected" value="=">=</option>
                                            <option value=">">></option>
                                            <option value="<"><</option>
                                            <option value=">=">>=</option>
                                            <option value="<="><=</option>
                                            <option value="<>"><></option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" id="tbTURS" placeholder="Enter TURS" ng-model="vm.ValueTURS">
                                    </div>
                                    <button ng-disabled="!vm.haveProducts ||!(vm.basePrice || vm.Incremental)" class="btn btn-success col-md-4" ng-click="vm.updateProducts()"><i class="fa fa-cloud-upload"></i> Publish Products </button>
                                </div>
                            </div>




                        </div>


                        <div ng-show="vm.isLoding">
                            <div class="windows8">
                                <div class="wBall" id="wBall_1">
                                    <div class="wInnerBall"></div>
                                </div>
                                <div class="wBall" id="wBall_2">
                                    <div class="wInnerBall"></div>
                                </div>
                                <div class="wBall" id="wBall_3">
                                    <div class="wInnerBall"></div>
                                </div>
                                <div class="wBall" id="wBall_4">
                                    <div class="wInnerBall"></div>
                                </div>
                                <div class="wBall" id="wBall_5">
                                    <div class="wInnerBall"></div>
                                </div>
                            </div>
                        </div>
                        <div ng-show="!vm.isLoding">
                            <table class="table borderless" border="0" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th style="width:3%;text-align:center">
                                            <input type="checkbox" ng-model="vm.selectAll" ng-change="vm.updateSelection()">
                                        </th>
                                        <th style="width: 10%;text-align: center">
                                            <a href="#" ng-click="orderByField='realSKU'; re5verseSort = !reverseSort">Real SKU</a> <br />
                                            <input ng-model="search.realSKU" style="width:200px"/>
                                            @*Real SKU
        <span style="display:inline-block;" ng-click="vm.sortByAsc('realSKU')"><i ng-class="vm.isRSortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('realSKU')"><i ng-class="vm.isRSortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>
                                        <th style="width: 20%;text-align: center">
                                            <a href="#" ng-click="orderByField='name'; reverseSort = !reverseSort">Product Name</a><br />
                                            <input ng-model="search.name" style="width:200px" />
                                            @*Product Name
        <span style="display:inline-block;" ng-click="vm.sortByAsc('name')"><i ng-class="vm.isPNSortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('name')"><i ng-class="vm.isPNSortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>
                                        <th style="width:10%;text-align:center">
                                            <a href="#" ng-click="orderByField='sku'; reverseSort = !reverseSort">SKU</a><br />
                                            <input ng-model="search.sku" style="width:80px" />
                                            @*SKU
        <span style="display:inline-block;" ng-click="vm.sortByAsc('sku')"><i ng-class="vm.isSKUSortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('sku')"><i ng-class="vm.isSKUSortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>
                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='eBayItemID'; reverseSort = !reverseSort">eBay Item#</a><br />
                                            <input ng-model="search.eBayItemID" style="width:80px" />

                                        </th>
                                        <th style="width:8%;text-align:center">
                                            <a href="#" ng-click="orderByField='sellerId'; reverseSort = !reverseSort"> Seller Id</a><br />
                                            <input ng-model="search.sellerId" style="width:80px" />
                                            @*Seller Id
        <span style="display:inline-block;" ng-click="vm.sortByAsc('sellerId')"><i ng-class="vm.isSortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('sellerId')"><i ng-class="vm.isSortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>

                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='cost'; reverseSort = !reverseSort">Cost</a><br />
                                            <input ng-model="search.cost" style="width:80px" />
                                            @*Cost
         <span style="display:inline-block;" ng-click="vm.sortByAsc('cost')"><i ng-class="vm.isCSortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('cost')"><i ng-class="vm.isCSortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>

                                        <th style="width:8%;text-align:center">
                                            <a href="#" ng-click="orderByField='increment'; reverseSort = !reverseSort">Add</a><br />
                                            <input ng-model="search.increment" style="width:80px" />
                                            @*Increment   <span style="display:inline-block;" ng-click="vm.sortByAsc('increment')"><i ng-class="vm.isISortByAsc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-up" aria-hidden="true"></i></span>
        <span style="display:inline-block;" ng-click="vm.sortByDesc('increment')"><i ng-class="vm.isISortByDesc ? 'sort-active' : 'sort-inactive'" class="fa fa-arrow-down" aria-hidden="true"></i></span>*@
                                        </th>

                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='qty'; reverseSort = !reverseSort" title="Quantity on hand">Quantity</a><br />
                                            <input ng-model="search.qty" style="width:80px" />
                                        </th>
                                        <th style="width:7%;text-align:center">
                                            <a href="#" ng-click="orderByField='priceDefault'; reverseSort = !reverseSort"> Price 1</a><br />
                                            <input ng-model="search.priceDefault" style="width:80px" />

                                        </th>
                                        <th style="width:8%;text-align:center">
                                            <a href="#" ng-click="orderByField='updatedPrice'; reverseSort = !reverseSort"> Price 2 </a><br />
                                            <input ng-model="search.updatedPrice" style="width:80px" />

                                        </th>
                                        <th style="width:10%;text-align:center">
                                            <a href="#" ng-click="orderByField='firstProfitPrice'; reverseSort = !reverseSort">Profit 1 </a><br />
                                            <input ng-model="search.firstProfitPrice" style="width:80px" />

                                        </th>
                                        <th style="width:10%;text-align:center">
                                            <a href="#" ng-click="orderByField='secondProfitPrice'; reverseSort = !reverseSort">Profit 2 </a><br />
                                            <input ng-model="search.secondProfitPrice" style="width:80px" />

                                        </th>
                                        @*<th style="width:5%;text-align:center">
                                                <a href="#" ng-click="orderByField='diff'; reverseSort = !reverseSort">Diff</a>

                                            </th>*@
                                        @*<th style="width:5%;text-align:center">
                                                <a href="#" ng-click="orderByField='kz'; reverseSort = !reverseSort">KZ</a>
                                               h>
                                            <th style="width:5%;text-align:center">
                                                <a href="#" ng-click="orderByField='oht'; reverseSort = !reverseSort"> OHT</a>
                                              </th>*@

                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='daily30'; reverseSort = !reverseSort" title="Daily Units Sold Rate for Past 30 Days">SRP30</a><br />
                                            <input ng-model="search.daily30" style="width:80px" />
                                        </th>
                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='total30'; reverseSort = !reverseSort" title="Total Number of Units Sold in Past 30 days">TUS30</a><br />
                                            <input ng-model="search.total30" style="width:80px" />
