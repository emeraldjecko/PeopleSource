                                        <th style="width:5%;text-align:center">
                                            <a href="#" ng-click="orderByField='stockDate'; reverseSort = !reverseSort">Stock Date</a><br />
                                            <input ng-model="search.stockDate" style="width:80px" />
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="row-striped" ng-repeat="item in vm.products | filter: search | orderBy:orderByField:reverseSort">
                                        <td class="text-center">
                                            <input type="checkbox" ng-model="item.selected" />
                                        </td>
                                        <td>
                                            {{item.realSKU}}
                                        </td>
                                        <td>
                                            {{item.name}}
                                        </td>
                                        <td class="text-left">
                                            {{item.sku}}
                                        </td>
                                        <td class="text-center">
                                            {{item.eBayItemID }}
                                        </td>
                                        <td class="text-left">
                                            {{item.sellerId}}
                                        </td>

                                        <td class="text-center">
                                            {{item.cost}}
                                        </td>
                                        <td class="text-center">
                                            {{item.increment}}
                                        </td>

                                        <td class="text-center">
                                            {{item.qty}}
                                        </td>
                                        <td class="text-center">
                                            {{item.priceDefault}}
                                        </td>

                                        <td class="text-center">
                                            {{item.updatedPrice | number:2}}
                                        </td>
                                        <td class="text-center">{{ item.firstProfitPrice| number:2}}</td>
                                        <td class="text-center">{{item.secondProfitPrice | number:2}}</td>
                                        @*<td class="text-center">
                                                {{item.diff | number:2}}
                                            </td>*@
                                        @*<td class="text-center">
                                                {{item.kz | number:2}}
                                            </td>
                                            <td class="text-center">
                                                {{item.oht | number:2}}
                                            </td>*@

                                        <td class="text-center">
                                            {{item.daily30 | number:2}}
                                        </td>
                                        <td class="text-center">
                                            {{item.total30}}
                                        </td>
                                        <td class="text-center">
                                            {{item.dailyRestock | number:2}}
                                        </td>
                                        <td class="text-center">
                                            {{item.totalRestock}}
                                        </td>
                                        <td class="text-center">
                                            {{item.stockDate | date:'MM/dd/yy'}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <div class="col-md-12">
                            <button ng-disabled="!vm.haveProducts ||!vm.basePrice" class="btn btn-success pull-right" ng-click="vm.updateProducts()"><i class="fa fa-cloud-upload"></i> Publish Products </button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

