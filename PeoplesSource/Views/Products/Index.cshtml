<script type="text/javascript">
    $(document).ready(function () {
        $("#sku").focus();
        $("#divProfitValue2").hide();

        $("#ddlProfit1").change(function () {
            var _operand = $(this).val();
            if (_operand == "between") {
                $("#divProfitValue2").show();
            }
            else {
                $("#divProfitValue2").hide();
            }
        });

        $("#divSRP30Value2").hide();

        $("#ddlSRP30").change(function () {
            var _operand = $(this).val();
            if (_operand == "between") {
                $("#divSRP30Value2").show();
            }
            else {
                $("#divSRP30Value2").hide();
            }
        });
    });

    function ClearProfit1Filter()
    {
        $("#ddlProfit1").val("");
        $("#divProfitValue2").hide();
        $("#profit1TextBox1").val("");
        $("#profit1TextBox2").val("");
    }
    function ClearSRP30Filter() {
        $("#ddlSRP30").val("");
        $("#divSRP30Value2").hide();
        $("#srp30TextBox1").val("");
        $("#srp30TextBox2").val("");
    }
</script>