@model List<PeoplesSource.Ebay.Models.Message>
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        @if (Model == null)
        {
            <div>Message Detail Not Available.</div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <div>
                        <table class="table table-striped table-bordered table-hover footable" data-filter="#filter">
                            <tr>
                                <th>From</th>
                                <td>@Model[0].Sender</td>
                            </tr>
                            <tr>
                                <th>Subject</th>
                                <td>@Model[0].Subject</td>
                            </tr>
                            <tr>
                                <th>Date</th>
                                <td>@Model[0].ReceiveDate</td>
                            </tr>
                            <tr>
                                <th colspan="2">Message Details</th>
                            </tr>
                            <tr>
                                <td colspan="2" align="center">
                                    @Html.Raw(Model[0].Text)
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>

    $(".modal-dialog").css("width", "65%");
</script>