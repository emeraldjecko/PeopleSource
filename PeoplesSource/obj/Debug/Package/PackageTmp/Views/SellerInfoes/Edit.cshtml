@model PeoplesSource.Data.Models.SellerInfo

@{
    ViewBag.Title = "Edit";
}

<div class="container" style="margin-top:40px;">
    <div class="panel panel-primary">
        <div class="panel-heading"><h4>Edit</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 text-center" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Increment, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Increment, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.Increment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsPercentage, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                                @Html.EditorFor(model => model.IsPercentage)
                                @Html.ValidationMessageFor(model => model.IsPercentage, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.KZ, htmlAttributes: new { @class = "control-label col-md-2 " })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.KZ, new { @class = "form-control", type = "number" })
                            @Html.ValidationMessageFor(model => model.KZ, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OHT, htmlAttributes: new { @class = "control-label col-md-2 " })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.OHT, new { @class = "form-control", type = "number" })
                            @Html.ValidationMessageFor(model => model.OHT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <a href="@Url.Action("Index")" target="_self" class="btn btn-info">
        <span class="glyphicon glyphicon-list-alt"></span> Back to list
    </a>
</div>