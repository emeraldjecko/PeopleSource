@model PeoplesSource.Models.AdminList
@{
    ViewBag.Title = "Admin List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- /.row -->

                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-12" style="margin-bottom:25px;">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Admin</h5>
                                <div class="ibox-tools">
                                    <button type="button" class="btn btn-xs btn-primary" onclick="AddAdmin()">Add New Admin</button>
                                </div>
                            </div>
                            <div class="ibox-content" style="margin-bottom: 20px;">
                                <div class="row">
                                    <div id="AdminListContainer">
                                        @Html.Partial("List")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
<script type="text/javascript">

    function AddAdmin() {
        $("#divLoading").show();
        NavigateTo('@Url.Action("Add", "Admin")');
    };
    $(function () {

        $('#side-menu').find('li').removeClass('active');
        $('#side-menu').find('#User').addClass('active');
    });

</script>