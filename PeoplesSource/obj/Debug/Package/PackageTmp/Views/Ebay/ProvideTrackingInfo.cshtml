@model PeoplesSource.Models.TrackingInfoModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <h3>Provide Tracking Information</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        @if (Model != null)
        {
            <div class="panel panel-default">
                @*<div class="panel-heading" style="padding: 15px !important">
                    Seller

                </div>*@
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div>
                        <table class="table table-striped table-bordered table-hover footable" data-filter="#filter">
                            <tr>
                                <td>Delivery Status:</td>
                                <td>@Model.DeliveryStatus</td>
                            </tr>
                            <tr>
                                <td>Ack</td>
                                <td>@Model.Ack</td>
                            </tr>
                            <tr>
                                <td>Time Stamp</td>
                                <td>@Model.TimeStamp</td>
                            </tr>
                            <tr>
                                <td>Version</td>
                                <td>@Model.Version</td>
                            </tr>
                        </table>
                    </div>
                    <div>
                        <table class="table table-striped table-bordered table-hover footable" data-filter="#filter">
                            <thead>
                                <tr>
                                    <th>Error Id</th>
                                    <th>Error Category</th>
                                    <th>Error Domain</th>                               
                                    <th>Message</th>
                                    <th>Severity</th>
                                    <th>Subdomain</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TrackingErrorItems.Any())
                                {
                                    foreach (var item in Model.TrackingErrorItems)
                                    {
                                        <tr>
                                            <td>
                                                @item.ErrorId
                                            </td>
                                            <td>
                                                @item.ErrorCategory
                                            </td>
                                            <td>
                                                @item.ErrorDomain
                                            </td>                                       
                                            <td>
                                                @item.Message
                                            </td>
                                            <td>
                                                @item.Severity
                                            </td>
                                            <td>
                                                @item.Subdomain
                                            </td>
                                        </tr>
                                        <tr style="display: none;">
                                            <td colspan="8">

                                                @if (item.ErrorParameters.Any())
                                                {
                                                    <table class="table table-striped table-bordered table-hover footable" data-filter="#filter">
                                                        <thead>
                                                            <tr>
                                                                <th>Name</th>
                                                                <th>Value</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var itemError in item.ErrorParameters)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        @itemError.Name
                                                                    </td>
                                                                    <td>
                                                                        @itemError.Value
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6">
                                            <label>No Record Found.</label>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        }
        else
        {
            <div>Data Not Available</div>
        }
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
