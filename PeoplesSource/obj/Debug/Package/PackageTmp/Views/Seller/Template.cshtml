@model PeoplesSource.Models.TemplateDetail

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .form-group textarea {
            width:  100%;
            height: 85px; 
            padding-left:10px;  
            padding-top:5px;            
        }
     
    </style>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
</head>
<body>
    @using (Html.BeginForm("Template", "Seller", FormMethod.Post, new { id = "AddTemplateData" }))
    {
        @Html.HiddenFor(model => model.SellerId)
        <div class="row">          
                <div class="col-md-12">
                    @Html.ValidationSummary(true)
                    <div id="templateValidaSummary"></div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-2 control-label">
                                @Html.LabelFor(model => model.TemplateName)
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TemplateName, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                            @Html.ValidationMessageFor(model => model.TemplateName)
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 control-label">
                                @Html.LabelFor(model => model.TemplateContent)
                            </div>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.TemplateContent, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.TemplateContent)
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="button" style="float: left" value="Save" id="saveTemplate" onclick="save();" class="canBtn" />
                                    <input type="button" style="float: left" value="Cancel" class="canBtn" />
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>        
    }

</body>
</html>
