                            <tbody>
                                <tr class="row-striped" ng-repeat="item in vm.netoproducts | filter: searchKeyword | orderBy:orderByField:reverseSort">
                                    <td class="text-center">
                                        {{item.position}}
                                    </td>
                                    <td class="text-center">
                                        {{item.realSKU}}
                                    </td>
                                    <td class="text-center">
                                        {{item.sellerId}}
                                    </td>
                                    <td class="text-center">
                                        {{item.itemNumber}}
                                    </td>
                                    <td class="text-center">
                                        {{item.title}}
                                    </td>
                                    <td class="text-center">
                                        {{item.priceDefault}}
                                    </td>

                                    <td class="text-center">{{ item.price2}}</td>

                                    <td class="text-center">
                                        {{item.shipping}}
                                    </td>
                                    <td class="text-center">
                                        {{item.sold}}
